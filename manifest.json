{
    "name": "GitHub Tree View",
    "homepage_url": "https://github.com/tomasbonco/githubtree",
    "author": "Tomáš Bončo",
    "version": "1.0.1",
    "manifest_version": 2,
    "description": "Provides folder structure view for code in GitHub.",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
     "page_action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
		  "public/bundle.js"
        ],
        "css": []
      }
    ]
  }